<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cvbuilder.HomeController"
            style="-fx-background-color: #006994;">

    <center>
        <VBox alignment="CENTER" spacing="25">
            <Label text="Welcome to CV Builder"
                   style="-fx-font-size: 26px; -fx-text-fill: white;"/>

            <Button text="Create New CV"
                    onAction="#goToCreate"
                    style="-fx-font-size: 16px; -fx-padding: 12 20;"/>

            <Button text="View Saved Records"
                    onAction="#goToRecords"
                    style="-fx-font-size: 16px; -fx-padding: 12 20;"/>
        </VBox>
    </center>

</BorderPane>
