<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cvbuilder.RecordsController">

    <top>
        <Label text="Saved Records"
               style="-fx-font-size: 24px; -fx-padding: 10; -fx-text-fill: white;"/>
    </top>

    <center>
        <TableView fx:id="table" prefHeight="300">
            <columns>
                <TableColumn fx:id="nameCol" text="Name" prefWidth="150"/>
                <TableColumn fx:id="emailCol" text="Email" prefWidth="200"/>
                <TableColumn fx:id="editCol" text="Edit" prefWidth="80"/>
                <TableColumn fx:id="deleteCol" text="Delete" prefWidth="80"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <Button text="Back to Home"
                style="-fx-font-size: 16px; -fx-padding: 10;"
                onAction="#goHome"/>
    </bottom>

</BorderPane>
